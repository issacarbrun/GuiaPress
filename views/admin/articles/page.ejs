<%- include ('../../partials/header.ejs')  %> 
<%- include ('../../partials/homenavbar.ejs')  %> 
<body>
    <div class="container">

        <hr>
        <% result.articles.rows.forEach(article => { %>
           <div class="card">
               <div class="card-header">
                    <h2><%= article.title %> </article></h2>
               </div>
               <br>
               <div class="card-body">
                <a href="/<%= article.slug %> "class="btn btn-success"> Ler artigo</a>
               </div>
               <br>
           </div>
        <% }) %>

        <div class="col col-12">
            <hr>

            <% if (result.page >2) { %>
                <a style="float:left" href="/articles/page/<%= result.page - 1%>">Preview</a>
            <% } else if(result.page ==2) { %>
                <a style="float:left" href="/">Preview</a>
            <% }  %>
            <% if (result.next) { %>
                <a style="float:right" href="/articles/page/<%= result.page + 1%>">Next</a>
            <% }  %>
            
        </div>            
       
    </div>
    
    </div>
</body>
<%- include ('../../partials/footer.ejs')  %> 